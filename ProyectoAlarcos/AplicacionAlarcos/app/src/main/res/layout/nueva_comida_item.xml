<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout sin atributos app:layout_constraint -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/VerdeFont"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del ingrediente"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvValorEnergetico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor energético: 0 kcal"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvGrasas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grasas: 0 g"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCarbohidratos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carbohidratos: 0 g"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvProteinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proteínas: 0 g"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sal: 0 g"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Divider con restricciones válidas -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
